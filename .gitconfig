[user]
	email = jordan.huang@ailabs.tw
	name = jordan
[color]
   ui        = true
   diff      = auto
   branch    = auto
   log       = auto

[alias]
   st        = status -s
   stat      = status
   stuno     = status -uno


   co        = checkout

   bo        = fetch origin
   fu        = fetch upstream
   po        = pull origin
   pu        = pull --rebase origin master
    # one-line log
   l         = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short

   a         = add
   ap        = add -p
   c         = commit
   ca        = commit -a --verbose
   cm        = commit -m
   cam       = commit -a -m
   m         = commit --amend --verbose

   d         = difftool -y
   ds        = diff --stat
   dc        = diff --cached

   prev = checkout HEAD^1
   next = "!sh -c 'git log --reverse --pretty=%H master | awk \"/$(git rev-parse HEAD)/{getline;print}\" | xargs git checkout'"

   amend     = commit -a --amend --no-edit

[core]
   editor    = vim
	attributesfile = /home/jordan/.gitattributes
	excludesfile = /Users/jordan/.gitignore_global
[color "diff"]
   meta      = yellow bold
   frag      = magenta bold
   old       = red bold
   new       = green bold
[color "status"]
   aded      = yellow
   changed   = green
   untracked = cyan
[diff]
	tool = meld
[merge]
        tool = meld
[mergetool "meld"]
        # Choose one of these 2 lines (not both!) explained below.
        #cmd = meld "$LOCAL" "$MERGED" "$REMOTE" --output "$MERGED"
        cmd = meld "$LOCAL" "$BASE" "$REMOTE" --output "$MERGED"

[filter "clean_ipynb"]
    clean = jq --indent 1 --monochrome-output '. + if .metadata.git.suppress_outputs | not then { cells: [.cells[] | . + if .cell_type == \"code\" then { outputs: [], execution_count: null } else {} end ] } else {} end'
    smudge = cat
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[commit]
	template = /Users/jordan/.stCommitMsg
[pull]
	rebase = true
[rerere]
	enabled = false
[difftool "meld"]
	cmd = open -W -a Meld --args \\\"$LOCAL\\\" \\\"$PWD/$REMOTE\\\"
	trustExitCode = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[init]
	defaultBranch = main
